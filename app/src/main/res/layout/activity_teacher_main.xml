<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherMain">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/showNT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Welcome into Teacher Portal"
            android:textSize="20dp" />

        <Button
            android:id="@+id/AddAtendence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#86c4f0"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:text="Add Attendence " />
        <Button
            android:id="@+id/ShowAtendenceT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#86c4f0"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:text="Show Attendence " />


        <Button
            android:id="@+id/logoutTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@color/colorAccent"
            android:text="Log out "
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/addNotiTeacher"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/roundedbutton"
        android:foregroundGravity="bottom"
        android:padding="17dp"
        android:scaleType="fitXY"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seeNotiTeacher"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0"
        tools:src="@drawable/plus" />

    <ImageButton
        android:id="@+id/seeNotiTeacher"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom"

        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="212dp"
        android:layout_marginRight="212dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/roundedbutton"
        android:foregroundGravity="bottom"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/eye"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addNotiTeacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0"
        tools:src="@drawable/eye" />


</androidx.constraintlayout.widget.ConstraintLayout>